{
    "src_folders" : ["./tests/walmart-demo.js"],
    "output_folder": "./reports",
    "custom_commands_path": "",
    "custom_assertions_path": "",
    "page_objects_path": "./page_objects",
    "__globals_path": "./globals.js", 
    "parallel_process_delay": 3600,

    "selenium": {
        "start_process": true,
        "server_path": "./lib/selenium-server-standalone-3.141.59.jar",
        "start_session": true,
        "log_path": "./log/",
        "port": 4444,
        "cli_args": {
           "webdriver.chrome.driver": "./node_modules/chromedriver/lib/chromedriver/chromedriver.exe", 
            "webdriver.gecko.driver": "./node_modules/geckodriver/geckodriver.exe"
        }
    },

    "test_workers": {
        "enabled": true,   
        "workers": "auto"
    },

    "test_settings": {
        "default": {
            "launch_url": "http://walmart.ca",
            "port": 4444,
            "silent": true,
            "screenshots": {
                "enabled": false,        
                "on_failure": true,
                "path": "screenshots"   
            },
            "request_timeout_options": {
                "timeout": 60000,
                "retry_attempts": 5
            },
            "filter": ["./tests"]
        },
        "skip_testcases_on_fail": true,

        "chrome": {
            "desiredCapabilities": {
                "browserName": "chrome",
                "javascriptEnabled": true,
                "chromeOptions": {
                    "args": [
                        "--disable-web-security",
                        "--ignore-certificate-errors",
                        "--test-type"
                    ]
                }
            }
        },

        "firefox": {
            "desiredCapabilities": {
                "browserName": "firefox",
                "marionette": true
            }
        }
    }
}
  